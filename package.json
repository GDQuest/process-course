{
  "name": "@gdquest/process-course",
  "version": "0.0.63",
  "description": "This script processes the course content into the format compatible with the new GDSchool platform. It is not intended to be used outside of the GDQuest team.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "process-course": "dist/cli.js"
  },
  "scripts": {
    "dev2": "nodemon --watch 'src/**/*.ts' --watch '**/*.md' --exec 'ts-node' src/index.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "npx --yes tsx src/cli.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "build-binaries": "npm run build && pkg -t node18-macos,node18-linux,node18-win -o ./binaries/process-course dist/cli.js",
    "prepublish": "npm run build"
  },
  "keywords": [],
  "author": "GDQuest <info@gdquest.org>",
  "maintainers": [
    "LumenWrites <lumenwrites@gmail.com> (https://lumenwrites.dev/)"
  ],
  "repository": {
    "url": "git+https://github.com/GDQuest/process-course.git"
  },
  "bugs": {
    "url": "https://github.com/GDQuest/process-course/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.1",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "node-watch": "^0.7.4",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "slugify": "^1.6.6",
    "zip-a-folder": "^1.1.5"
  }
}
